{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build/",
        "removeComments": true,
        "alwaysStrict": true,
        "outFiles": [
            "${workspaceRoot}/build/*.js"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}